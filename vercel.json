{
  "version": 2,
  "name": "task-track-api",
  "buildCommand": "yarn build",
  "outputDirectory": "dist",
  "builds": [
    {
      "src": "dist/app.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["dist/**"] }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "dist/app.js"
    }
  ],
  "rewrites": [
    {
        "source": "/(.*)", 
        "destination": "dist/app.js"
    }
]
}
